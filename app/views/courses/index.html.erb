<h1>Courses</h1>

<div id="courses">
  <table class="table">
    <thead>
      <tr>
        <th scope="col"> Course Name </th>
        <th scope="col"> Description </th>
        <th scope="col"> Action </th>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do | course | %>
        <%= render course %>
      <% end %>
    </tbody>
  </table>
</div>

<% if can? :create, Course %>
  <%= link_to "New course", new_school_course_path %>
<% end %>