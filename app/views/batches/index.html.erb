<h1>Batches</h1>

<div id="batches">
  <table class="table">
    <thead>
      <tr>
        <th scope="col"> Batch Name </th>
        <% if current_user.student? %>
          <th scope="col"> Status </th>
        <% end %>          
        <th scope="col"> Action </th>
      </tr>
    </thead>
    <tbody>
      <% @batches.each do | batch | %>
        <%= render batch %>
      <% end %>
    </tbody>
  </table>

</div>

<% if can? :create, Batch %>
  <%= link_to "New batch", new_course_batch_path(@course) %>
<% end %>
