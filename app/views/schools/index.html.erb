<h1>Schools</h1>

<div id="schools">
  <table class="table">
    <thead>
      <tr>
        <th scope="col"> School Name </th>
        <th scope="col"> Address </th>
        <th scope="col"> Action </th>
      </tr>
    </thead>
    <tbody>
      <% @schools.each do |school| %>
        <%= render school %>
      <% end %>
    </tbody>
  </table>
</div>

<% if can? :create, School %>
  <%= link_to "New school", new_school_path %>
<% end %>